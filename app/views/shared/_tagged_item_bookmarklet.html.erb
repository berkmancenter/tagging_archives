<div id="bookmarklet">
	<%= semantic_form_for(@tagged_item, :url => bookmarklets_add_item_url, :method => :post) do |f| %>
	  <div class="bookmarklet_tabs" id="bookmarklet_tabs">
	      <%= f.inputs do %>
	        <%= f.input :title, :required => true, :input_html => { :value => @title, :size => 75, :readonly => true } %>
	        <%= f.input :urn, :required => true, :input_html => { :value => @urn, :size => 75, :readonly => true } %>
			<% unless @existing.nil? || @existing.tag_list.empty? %>
			  <br />Existing Tags: <%= @existing.tag_list %>
			<% end %>
			<%= f.input :tag_list, :label => 'Tags', :hint => 'A comma separated list of tags.', :input_html => { :size => 75 } %>
			<% unless @existing.nil? || @existing.notes.empty? %>
			  <br />Existing Notes: <%= @existing.notes %>
			<% end %>
			<%= f.input :notes, :input_html => { :rows => 5, :cols => 50 } %>
	      <% end %>
	      <%= f.actions %>
	  </div>
	<% end %>
</div>